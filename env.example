# ===========================================
# RIONA AI ENTERPRISE SYSTEM CONFIGURATION
# ===========================================

# Environment
NODE_ENV=development

# Server Configuration
PORT=3000
HOST=localhost
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/riona-ai
MONGODB_DB_NAME=riona-ai
MONGODB_MAX_POOL_SIZE=10
MONGODB_SERVER_SELECTION_TIMEOUT_MS=5000
MONGODB_SOCKET_TIMEOUT_MS=45000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_RETRIES=3

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-that-is-at-least-32-characters-long
JWT_EXPIRES_IN=24h
JWT_ISSUER=riona-ai
JWT_AUDIENCE=riona-ai-users
BCRYPT_SALT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# AI Services Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo
OPENAI_MAX_TOKENS=2048

GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-pro

# Instagram Configuration
INSTAGRAM_ENABLED=false
INSTAGRAM_USERNAME=your-instagram-username
INSTAGRAM_PASSWORD=your-instagram-password
INSTAGRAM_MAX_LIKES_PER_HOUR=30
INSTAGRAM_MAX_COMMENTS_PER_HOUR=10
INSTAGRAM_MAX_FOLLOWS_PER_HOUR=10
INSTAGRAM_MAX_POSTS_PER_DAY=3

# Instagram Graph API Configuration
INSTAGRAM_CLIENT_ID=your_instagram_client_id
INSTAGRAM_CLIENT_SECRET=your_instagram_client_secret
INSTAGRAM_REDIRECT_URI=https://studiflow.studibuch.de/auth/instagram/callback
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token

# Instagram Automation (Puppeteer)
IGusername=your-instagram-username
IGpassword=your-instagram-password

# Gemini API Keys (Multiple for rotation)
GEMINI_API_KEY_1=your-gemini-key-1
GEMINI_API_KEY_2=your-gemini-key-2
GEMINI_API_KEY_3=your-gemini-key-3
GEMINI_API_KEY_4=your-gemini-key-4
GEMINI_API_KEY_5=your-gemini-key-5
GEMINI_API_KEY_6=your-gemini-key-6
GEMINI_API_KEY_7=your-gemini-key-7
GEMINI_API_KEY_8=your-gemini-key-8
GEMINI_API_KEY_9=your-gemini-key-9
GEMINI_API_KEY_10=your-gemini-key-10

# Twitter API (Optional)
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_SECRET=your-twitter-access-secret
TWITTER_BEARER_TOKEN=your-twitter-bearer-token

# Instagram Proxy (Optional)
INSTAGRAM_PROXY_HOST=
INSTAGRAM_PROXY_PORT=8080
INSTAGRAM_PROXY_USERNAME=
INSTAGRAM_PROXY_PASSWORD=

# Studibuch Scraping Configuration
STUDIBUCH_BASE_URL=https://studibuch.de
STUDIBUCH_SCRAPING_ENABLED=false
STUDIBUCH_SCRAPING_INTERVAL_MINUTES=60
STUDIBUCH_MAX_ARTICLES_PER_RUN=10

# Logging Configuration
LOG_LEVEL=info
LOG_MAX_FILES=14d
LOG_MAX_SIZE=20m
LOG_TO_FILE=false

# Development/Testing
DEBUG=riona:*
ENABLE_SWAGGER=true
ENABLE_METRICS=true

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Webhook Configuration (Optional)
WEBHOOK_SECRET=your-webhook-secret
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4
UPLOAD_PATH=uploads

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_SAMPLE_RATE=0.1

# Feature Flags
FEATURE_AI_CONTENT_GENERATION=true
FEATURE_AUTO_POSTING=false
FEATURE_ANALYTICS_DASHBOARD=true
FEATURE_MULTI_ACCOUNT=false

# External Services
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=eu-central-1
AWS_S3_BUCKET=

# Monitoring & Analytics
SENTRY_DSN=
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=

# Social Media APIs (Optional)
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_TOKEN_SECRET=

FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
FACEBOOK_ACCESS_TOKEN=

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=

# Security Headers
ENABLE_HELMET=true
ENABLE_RATE_LIMITING=true
ENABLE_CORS=true
ENABLE_COMPRESSION=true

# Development Tools
ENABLE_HOT_RELOAD=true
ENABLE_SOURCE_MAPS=true
ENABLE_PROFILING=false  