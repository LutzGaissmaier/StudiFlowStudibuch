# StudiFlow AI Enterprise - Local Development Configuration
# =======================================================
# Copy this file to .env and configure as needed

# Application Settings
NODE_ENV=development
PORT=3000
HOST=localhost

# Database Configuration (Optional - System runs without DB)
# MongoDB connection string - leave empty for graceful degradation
MONGODB_URI=
# Example: mongodb://localhost:27017/studiflow-ai

# Redis Configuration (Optional - System runs without Redis)
# Redis connection string - leave empty for graceful degradation  
REDIS_URL=
# Example: redis://localhost:6379

# AI Service Configuration
# Gemini API Keys (Optional - for AI content generation)
# Add your Gemini API keys here, system works without them
GEMINI_API_KEY_1=your-gemini-api-key-1
GEMINI_API_KEY_2=your-gemini-api-key-2
GEMINI_API_KEY_3=your-gemini-api-key-3

# OpenAI Configuration (Optional)
OPENAI_API_KEY=your-openai-api-key

# Instagram Integration (Optional - for social media automation)
# Instagram Graph API Credentials
INSTAGRAM_CLIENT_ID=your-instagram-client-id
INSTAGRAM_CLIENT_SECRET=your-instagram-client-secret
INSTAGRAM_REDIRECT_URI=http://localhost:3000/auth/instagram/callback
INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token

# Instagram Automation Credentials (for Puppeteer automation)
IGusername=your-instagram-username
IGpassword=your-instagram-password

# Security Configuration
JWT_SECRET=local-development-secret-key-change-in-production
SESSION_SECRET=local-session-secret-change-in-production

# StudiBuch Magazine Configuration
STUDIBUCH_BASE_URL=https://studibuch.de/magazine
SCRAPING_DELAY=2000
MAX_ARTICLES_PER_SCRAPE=10

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/studiflow.log

# Development Features
ENABLE_DEBUG_ROUTES=true
ENABLE_MOCK_DATA=true
GRACEFUL_DEGRADATION=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://127.0.0.1:3000

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000
